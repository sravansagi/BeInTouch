<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart"
        android:layout_width="@dimen/w_h_twofifty_dp"
        android:layout_height="@dimen/w_h_twofifty_dp"
        android:layout_gravity="center"
        android:contentDescription="@string/graph_content_description"
        android:layout_marginEnd="@dimen/margin_eight_dp"
        android:layout_marginStart="@dimen/margin_eight_dp"
        android:layout_marginTop="@dimen/margin_eight_dp">
    </com.github.mikephil.charting.charts.PieChart>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/history"
        android:layout_marginStart="@dimen/margin_sixteen_dp"
        android:textAppearance="@android:style/TextAppearance.Large"/>
</LinearLayout>